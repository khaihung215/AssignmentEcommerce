<hr class="offset-md">

<div class="box">
    <div class="container">
        <h1>Shopping Cart</h1>
        <hr class="offset-sm">
    </div>
</div>
<hr class="offset-md">

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="checkout-cart">
                        <div class="content">
                            @if (ViewBag.TotalItem < 1)
                            {
                                <h2>@ViewBag.CartNull</h2>
                            }
                            else
                            {
                                @foreach (var cartItem in ViewBag.Carts)
                                {
                                    @await Component.InvokeAsync("CartItem", cartItem);
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-8 col-md-4">
            <hr class="offset-md visible-sm">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2 class="no-margin">Summary</h2>
                    <hr class="offset-md">

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xs-6">
                                <p>Subtotal (@ViewBag.TotalItem items)</p>
                            </div>
                            <div class="col-xs-6">
                                <p><b>@Convert.ToDecimal(ViewBag.Total).ToString("#,##") VND</b></p>
                            </div>

                            <div class="col-xs-6">
                                <p>Discount</p>
                            </div>
                            <div class="col-xs-6">
                                <p><b>0 VND</b></p>
                            </div>

                            <div class="col-xs-6">
                                <p>Tax</p>
                            </div>
                            <div class="col-xs-6">
                                <p><b>0 VND</b></p>
                            </div>
                        </div>
                    </div>
                    <hr>

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5 class="no-margin">Total sum</h5>
                            </div>
                            <div class="col-xs-6">
                                <h4 class="no-margin">@Convert.ToDecimal(ViewBag.Total).ToString("#,##") VND</h4>
                            </div>
                        </div>
                    </div>
                    <hr class="offset-md">

                    <a href="../checkout/" class="btn btn-primary btn-lg justify"><i class="ion-android-checkbox-outline"></i>&nbsp;&nbsp; Checkout order</a>
                    <hr class="offset-md">
                </div>
            </div>
        </div>
    </div>
</div>